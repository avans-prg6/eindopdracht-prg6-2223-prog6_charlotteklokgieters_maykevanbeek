@model SantaViewModel

<div style="margin-left: 200px">
    <div>
        <h1 class="display-4">Welkom terug Kerstman!</h1>
        <p>Welke kinderen mogen deze keer hun verlanglijstje invullen?</p>
    </div>
    
    <hr />

    @if (ViewBag.Errors != null)
    {
        <br />
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert" style="margin-left: 100px; width: 20%;">
            @foreach (string e in ViewBag.Errors)
            {
                <strong class="font-bold">Er ging iets mis:</strong>
                <span class="block sm:inline">@e</span>
            }
        </div>
    }

    <div>
        <form asp-controller="Santa" asp-action="MakeAccounts">
            <textarea asp-for="KidsNames" style="width: 600px; height: 200px;" >@Model.KidsNames</textarea>
            <span asp-validation-for="KidsNames"></span>
            <p style="color: grey;">Typ alle namen met comma's ertussen</p>

            <hr />

            <label asp-for="BeenNice">Zijn deze kinderen braaf geweest?</label><br>
            <label class="switch">
                <input asp-for="BeenNice" type="checkbox" class="" />
                Ja deze kinderen zijn braaf!
            </label><br><br />

            <label asp-for="Password">Wachtwoord</label><br>
            <input asp-for="Password" type="password" class="" value="" >
            <span asp-validation-for="Password"></span>
            <p>Maak het wachtwoord voor de kindjes niet moeilijk hè!</p>

            <button type="submit" class="" name="save" role="button">Accounts voor kindjes maken!</button>
        </form>
    </div>
</div>
