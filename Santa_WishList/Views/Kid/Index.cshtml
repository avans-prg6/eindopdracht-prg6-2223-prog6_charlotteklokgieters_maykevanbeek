@model KidViewModel;

<div class="text-left">
	@if (ViewBag.Errors != null)
	{
		<br />
		<div class="border px-4 py-3 rounded relative ml-4 w-1/2 mr-6">
			<span class="border px-1 rounded text-xl sm:inline float-right" id="close" onclick="this.parentNode.remove(); return false;"><b>x</b></span>
			@for (int i = 0; i < ViewBag.Errors.Count; i++)
			{
				<strong class="font-bold">Er ging iets mis!: </strong>
				<span class="block sm:inline">@ViewBag.Errors[i]</span>
				if (ViewBag.Errors.Count > 1 && ViewBag.Errors.Count -1 != i)
				{
					<br />
				}
			}
		</div>
	}

	<div>
		<h1 class="display-4">Welkom @Model.Name</h1>
		<p>De <b>Kerstman</b> heeft gevraagd of je je verlanglijstje wil invullen!</p>
		<p>Voor we cadeautjes uitkiezen, moeten we je eerst wat vragen</p> @*label*@
	</div>
	
	<br />

	<form asp-controller="Kid" asp-action="PersonalInfo">
		<div>
			<label>Hoe oud ben je?</label>
			<br />
			<input type="text" class="" name="age" id="age" required="required">
			@Html.ValidationMessageFor(m => m.Age)
		</div>

		<br />

		<div>
			<label>Ben je braaf geweest?</label> 
			<div class="radiobutton">
			<label>
					<input type="radio" name="niceness" value="Very_Nice" checked>Heel braaf!</input>
			</label>
			</div>
			<div class="radiobutton">
				<label>
					<input type="radio" name="niceness" value="A_Little">Een beetje braaf...</input>
				</label>
			</div>
			<div class="radiobutton">
				<label>
					<input type="radio" name="niceness" value="Naughty">Ik heb het geprobeerd.</input>
				</label>
			</div>
		</div>

		<br />

		<div>
			<label>Wat heb je dan gedaan dat je zo braaf bent geweest?</label> 
			<br />
			<input type="text" class="" name="example" id="example">
			<br />
			<label>Vul deze vraag alleen in als je braaf bent geweest!</label>
		</div>

		<br />
		<input type="hidden" id="name" name="name" value="@Model.Name">
		<button type="submit" class="" name="save" role="button">Naar de volgende stap!</button>
	</form>
</div>
